<%= form_for @task, remote: true do |f| %>

  <div class="form-group">
    <%= f.text_field :description, placeholder: "Describe your task", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :deadline, id: "datetimepicker1", placeholder: "When shall it be done?", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "leTASK!", class: "btn btn-info" %>
  </div>

<% end %>